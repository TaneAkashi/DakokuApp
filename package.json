{
  "name": "DakokuApp",
  "version": "1.1.0",
  "description": "Dakoku App",
  "main": "lib/main.js",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "build:ts": "tsc",
    "build:mac": "yarn build:ts && cross-env NODE_ENV=production electron-builder --mac --x64",
    "build:win": "yarn build:ts && cross-env NODE_ENV=production electron-builder --win --x64",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "prepare": "husky install"
  },
  "build": {
    "appId": "dev.amotarao.taneakashi.dakoku-app",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "img/icon.png"
    },
    "win": {
      "icon": "img/icon.png",
      "target": "nsis"
    },
    "extraResources": [
      "img/**/*"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.28.0",
    "cross-env": "^7.0.3",
    "electron": "^12.0.6",
    "electron-builder": "^22.11.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.3.2",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@slack/webhook": "^6.0.0",
    "about-window": "^1.14.0",
    "akashi-dakoku-core": "^0.5.0",
    "axios": "^0.21.1",
    "electron-store": "^8.0.0",
    "keytar": "^7.7.0",
    "puppeteer-core": "^8.0.0",
    "puppeteer-in-electron": "^3.0.4"
  }
}
